#: import MDTextFieldRound kivymd.uix.textfield

<Connexion>
	BoxLayout:
		BoxLayout:
			orientation: 'vertical'
			MDToolbar:
				title: "VIVRE D'AMOUR"
				md_bg_color: self.theme_cls.primary_color

			MDLabel:
				font_style: "Button"
				text: "Connexion"
				pos_hint: {'center_x': .5, 'center_y': .2}
				text_color: 1, 0, 1, 0

			MDTextFieldRound:
				id: email
				pos_hint: {'center_x': .5, 'center_y': .2}
				color_mode: 'custom'
				icon_left: "email"
				hint_text: "Email"
				required: True
				helper_text: "Pour se connecter il faut votre Email"

			MDTextFieldRound:
				id: password
				pos_hint: {'center_x': .5, 'center_y': .4}
				text_color: 0, 0, 0
				icon_left: "key-variant"
				hint_text: "Mot de Passe"
				required: True
				helper_text: "Il est obligatoire de donner\n son mot de passe pour se connecter"

			MDLabel:
				id: error
				font_style: "Button"
				text_color: 1, 0, 1, 0


			MDFillRoundFlatButton:
        		text: "Connexion"
        		md_bg_color: self.theme_cls.primary_color
        		pos_hint: {'center_x': .5, 'center_y': .5}
        		on_press:
        			app.connexion()

        	MDRaisedButton:
    			text: "Vous etes nouveau? bienvenue\nInscription"
    			md_bg_color: 1, 1, 1, 0
    			pos_hint: {'center_x': .5, 'center_y': .7}
    			on_press:
    				app.change_screen("inscription", direction="right", mode="push")
